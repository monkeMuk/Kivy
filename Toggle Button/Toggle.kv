TextText:

<ToggleDisplay>:

    cols: 3

    ToggleButton:
        text: "OFF"

        size_hint: None,1
        width: "100dp"

        on_state: root.toggle_button_on_state(self)

    Button:
        text: "Counter"
        on_press: root.button_press()
        disabled: not root.count_enabled

        # disabled: makes the button not clickable
        #   if we use "disabled: root.count_enabled"
        #   when the count is enabled and results in True, the "disabled:" will be on
        #   so, when toggle is on, "disabled:" is on which disables it
        #   so, we use "not"
    
    Label:
        text: root.text
        font_name: "fonts2/Lcd.ttf"
        font_size: "80dp"
        color: "red"
    
    Switch:
        id: my_switch

        on_active: root.on_switch_active(self)
        size_hint: None,1
        width: "100dp"

        active: True

    Slider: 
        id: my_slider

        orientation: "vertical"
        min: 0
        max: 100

        value: 50

        
        disabled: not my_switch.active 
    
    BoxLayout:

        orientation: "vertical"

        Label:
            text: str(int(my_slider.value))
            disabled: my_slider.disabled
        
        ProgressBar:
            max: 100
            value: int(my_slider.value)
    
    Switch:
        id: my_switch2

        size_hint: None,1
        width: "100dp"

        active: True

    TextInput:
        id: my_TextInput

        size_hint: None,1
        width: "100dp"

        text: ""
        multiline: False

        on_text_validate: root.on_text_validate(self)

        disabled: not my_switch2.active
    
    Label:
        text:  "My sister's name is " + root.text_input_str

        disabled: not my_switch2.active

