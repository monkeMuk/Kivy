#:set e dp(100)

<CanvasExample1>:
    canvas:
        Rectangle:
            size: s,s
            pos: self.center_x - s/2, self.center_y - s/2
        Ellipse:
            pos: 400,100
            size: e,e/2
        Line:
            points: (0,0,self.width/4,100,self.width/2,0,self.width*3/4,100,self.width,0)
        
        Line:
            points: (0,0,100,self.height/4,0,self.height/2,100,self.height*3/4,0,self.height)

<CanvasExample2>:
    canvas:
